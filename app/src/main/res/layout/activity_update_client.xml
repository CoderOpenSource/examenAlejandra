<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Actualizar Cliente"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Nombre actual -->
    <TextView
        android:id="@+id/tv_nombre_actual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre actual: "
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo de texto para el nombre -->
    <EditText
        android:id="@+id/edt_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tv_nombre_actual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Apellido Paterno actual -->
    <TextView
        android:id="@+id/tv_apellido_paterno_actual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apellido Paterno actual: "
        app:layout_constraintTop_toBottomOf="@id/edt_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo de texto para el apellido paterno -->
    <EditText
        android:id="@+id/edt_apellido_paterno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Apellido Paterno"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tv_apellido_paterno_actual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Apellido Materno actual -->
    <TextView
        android:id="@+id/tv_apellido_materno_actual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apellido Materno actual: "
        app:layout_constraintTop_toBottomOf="@id/edt_apellido_paterno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo de texto para el apellido materno -->
    <EditText
        android:id="@+id/edt_apellido_materno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Apellido Materno"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tv_apellido_materno_actual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Celular actual -->
    <TextView
        android:id="@+id/tv_celular_actual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Celular actual: "
        app:layout_constraintTop_toBottomOf="@id/edt_apellido_materno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo de texto para el celular -->
    <EditText
        android:id="@+id/edt_celular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Celular"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/tv_celular_actual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Email actual -->
    <TextView
        android:id="@+id/tv_email_actual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email actual: "
        app:layout_constraintTop_toBottomOf="@id/edt_celular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo de texto para el email -->
    <EditText
        android:id="@+id/edt_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/tv_email_actual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Edad actual -->
    <TextView
        android:id="@+id/tv_edad_actual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edad actual: "
        app:layout_constraintTop_toBottomOf="@id/edt_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo de texto para la edad -->
    <EditText
        android:id="@+id/edt_edad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Edad"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/tv_edad_actual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Altura actual -->
    <TextView
        android:id="@+id/tv_altura_actual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Altura actual: "
        app:layout_constraintTop_toBottomOf="@id/edt_edad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo de texto para la altura -->
    <EditText
        android:id="@+id/edt_altura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Altura (cm)"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tv_altura_actual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Peso actual -->
    <TextView
        android:id="@+id/tv_peso_actual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Peso actual: "
        app:layout_constraintTop_toBottomOf="@id/edt_altura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo de texto para el peso -->
    <EditText
        android:id="@+id/edt_peso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Peso (kg)"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tv_peso_actual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botón para actualizar cliente -->
    <Button
        android:id="@+id/btn_actualizar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actualizar Cliente"
        app:layout_constraintTop_toBottomOf="@id/edt_peso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp" />

    <!-- Botón para ver rutinas (inicialmente en gone) -->
    <Button
        android:id="@+id/btn_ver_rutinas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Rutinas"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_actualizar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
