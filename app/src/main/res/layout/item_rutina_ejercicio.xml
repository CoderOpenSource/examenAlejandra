<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Display the name of the exercise -->
    <TextView
        android:id="@+id/txt_ejercicio_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del ejercicio"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Display the```xml -->
    <!-- Display the number of repetitions -->
    <TextView
        android:id="@+id/txt_repeticiones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Repeticiones: 12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_ejercicio_nombre"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Display the number of series -->
    <TextView
        android:id="@+id/txt_series"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Series: 4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_repeticiones"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Display the rest period -->
    <TextView
        android:id="@+id/txt_descanso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descanso: 30 segundos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_series"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
